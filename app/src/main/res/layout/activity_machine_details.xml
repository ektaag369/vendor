<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MachineRent.MachineDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="40dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/profilebg"
            android:scaleType="centerCrop"
            android:layout_marginTop="-5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Machines"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/darkgreen"
            android:layout_gravity="center"
            />
        <EditText
            android:id="@+id/mid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="MachineID"
            android:background="@color/white"
            android:textColorHint="@color/lightgreen"
            android:layout_marginBottom="10dp"
            android:maxLines="1"
            android:inputType="text"/>

        <EditText
            android:id="@+id/mname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="MachineName"
            android:background="@color/white"
            android:textColorHint="@color/lightgreen"
            android:layout_marginBottom="10dp"
            android:inputType="text"/>
        <EditText
            android:id="@+id/mdetails"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="MachineDetails"
            android:background="@color/white"
            android:textColorHint="@color/lightgreen"
            android:layout_marginBottom="10dp"
            android:inputType="textMultiLine"/>
        <EditText
            android:id="@+id/mrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="MachineRate"
            android:background="@color/white"
            android:textColorHint="@color/lightgreen"
            android:layout_marginBottom="10dp"
            android:inputType="number"/>

        <EditText
            android:id="@+id/mcompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="MachineCompany"
            android:layout_marginBottom="10dp"
            android:maxLines="1"
            android:background="@color/white"
            android:textColorHint="@color/lightgreen"
            android:inputType="text"/>

        <EditText
            android:id="@+id/mpurpose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Machine used for"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:textColorHint="@color/lightgreen"
            android:inputType="textMultiLine"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/ming"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/imgnotfound"/>
            <Button
                android:id="@+id/mingbtn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Show image"
                android:textColor="@color/white"
                android:background="@drawable/login_button"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>


        <Button
            android:id="@+id/maddbtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Add"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/login_button"
            android:layout_margin="30dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            />
    </LinearLayout>

</ScrollView>